{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@enums/*": ["./src/enums/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@constants/*": ["./src/constants/*"],
      "@dto/*": ["./src/dto/*"],
      "@middlewares/*": ["./src/middlewares/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}